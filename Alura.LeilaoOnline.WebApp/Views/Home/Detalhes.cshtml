@model  Alura.LeilaoOnline.WebApp.Models.LeilaoViewModel
@{
    ViewData["Title"] = "Detalhes do Leilão";
}

<div class="container">
    <div class="row leilao">
        <div class="col s12 m5">
            <div class="card imagens">
                <div class="card-image">
                    <img class="responsive-img" src="@Model.Imagem" />
                </div>
            </div>
            <!--div.card-->
        </div>
        <!--div.imagens-->
        <div class="col s12 m4">
            <div class="card info">
                <div class="card-content">
                    <span class="card-title">@Model.Titulo</span>
                    <p>@Model.Descricao</p>
                    <p>Valor Inicial: @Model.ValorInicial.ToString("0,000.00")</p>
                </div>
            </div>
            <!--div.card.info-->
        </div>
        <!--div.col.s12.m4-->
        <div class="col s12 m3">
            <div class="card estado blue-grey white-text">
                <div class="card-content">
                    <p>@Model.Estado</p>
                </div>
            </div>
            <!--div.card-->
        </div>
        <!--div.estado-->
    </div>
    <!--div.leilao-->
</div>