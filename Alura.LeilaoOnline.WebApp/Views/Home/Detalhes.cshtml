@model Alura.LeilaoOnline.WebApp.Models.LeilaoViewModel
@{
    ViewData["Title"] = "Detalhes do Leilão";
    var usuarioLogado = Context.Session.Get<Usuario>("usuarioLogado");
}

<div class="container">
    <div class="row leilao" data-id="@Model.Id">
        <div class="col s12 m7">
            <div class="card imagens">
                <div class="card-image">
                    <img class="responsive-img" src="@Model.Imagem" />
                </div>
            </div>
            <!--div.card-->
        </div>
        <!--div.imagens-->
        <div class="col s12 m5">
            <div class="card info">
                <div class="card-content">
                    <span class="card-title">@Model.Titulo</span>
                    <p>@Model.Descricao</p>
                </div>
            </div>
            <!--div.card.info-->
        </div>
        <!--div.info-->
    </div>
    <div class="row">
        <div class="col s12 m3">
            <div class="card red lighten-1 white-text valor-inicial center">
                <div class="card-content">
                    <span class="card-title">Valor Inicial: @Model.ValorInicial.ToString("0,000.00")</span>
                </div>
            </div>
        </div>
        <div class="col s12 m5">
            <div class="card estado blue-grey white-text">
                <div class="card-content">
                    <span class="card-title">@Model.Estado</span>
                    <!-- se estado for não iniciado: -->
                    <p>Início do Pregão: @Model.InicioPregao.ToString("dd/MM/yyyy")</p>
                    <p>Término do Pregão: @Model.TerminoPregao.ToString("dd/MM/yyyy")</p>
                    <!-- se estado for iniciado, mostrar lance atual e qtde de lances-->
                    <!-- se estado for finalizado, mostrar o ganhador e lance-->
                </div>
            </div>
            <!--div.card-->
        </div>
        <!--div.estado-->
        @if (usuarioLogado != null)
        {
            <div class="col s12 m4">
                <div class="card-panel center-align">
                    <a id="btnDarLance" href="#!" class="btn-large waves-effect waves-light brown white-text">Dar Lance!</a>
                </div>
            </div>
        }
    </div>
    <!--div.leilao-->
</div>