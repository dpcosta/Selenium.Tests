@model IEnumerable<Alura.LeilaoOnline.WebApp.Models.LeilaoViewModel>
@{
    ViewData["Title"] = "Leilões Online";
    string categoria = ViewData["categoria"] as string;
}

<section class="section section-prox-leiloes">
    <div class="container">
        @if (string.IsNullOrWhiteSpace(categoria))
        {
            <h4>Próximos Leilões</h4>

        } else
        {
            <h4>Leilões da categoria @categoria</h4>
        }
        <div class="row">
            @foreach (var leilao in Model)
            {
                <div class="col s12 m4">
                    <div class="card hoverable">
                        <div class="card-image">
                            <img src="@leilao.Imagem" class="responsive-img">
                            <span class="card-title">@leilao.Titulo</span>
                            
                        </div>
                        <div class="card-content">
                            <p>@leilao.Descricao.Substring(0,150)</p>
                        </div>
                        <div class="card-action">
                            <a asp-action="Detalhes" asp-route-id="@leilao.Id">Detalhes</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<div class="parallax-container valign-wrapper">
    <div class="parallax">
        <img src="https://picsum.photos/2000/800?image=78">
    </div>
</div>

