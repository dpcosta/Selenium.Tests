@model Alura.LeilaoOnline.WebApp.Models.LeilaoViewModel
@{
    ViewData["Title"] = "Novo Leilão";
}

<form class="container" asp-action="Novo" asp-controller="Leiloes">
    <h4 class="center-align">Inclusão de Leilão</h4>
    <div class="row">
        <div class="col s12 m8">
            <div class="card">
                <div class="card-content">
                    <h5 class="card-title">Informações básicas</h5>
                    <div class="input-field">
                        <input asp-for="Titulo" class="validate" />
                        <label asp-for="Titulo"></label>
                    </div>
                    <!--div.input-field titulo-->
                    <div class="input-field">
                        <textarea asp-for="Descricao" class="validate materialize-textarea"></textarea>
                        <label asp-for="Descricao"></label>
                    </div>
                    <!--div.input-field descricao-->
                    <div class="row">
                        <div class="input-field col s6">
                            <select>
                                <option value="1">Automóveis</option>
                                <option value="2">Item de Colecionador</option>
                                <option value="3">Arte e Pintura</option>
                            </select>
                            <label>Categoria</label>
                        </div>
                        <!--div.input-field categoria-->
                        <div class="input-field col s6">
                            <input id="valorInicial" type="number" class="validate">
                            <label for="valorInicial">Valor Inicial do Leilão</label>
                        </div>
                        <!--div.input-field valorInicial-->
                    </div>
                    <!--div.row-->
                </div>
                <!--div.card-content-->
                <div class="card-action">
                    <button type="submit" class="btn waves-effect waves-light z-depth-0"><i class="material-icons left">archive</i>Salvar</button>
                </div>
            </div>
            <!--div.card-->
        </div>
        <!--div.col1 infoBasica-->
        <div class="col s12 m4">
            <div class="card imagem">
                <div class="card-image file-field">
                    <img id="imgPoster" class="responsive-img" src="~/images/poster-vazio.png" />
                    <a class="btn-floating halfway-fab waves-effect waves-light">
                        <i class="material-icons">mode_edit</i>
                        <input id="poster" type="file">
                    </a>
                </div>
                <!--div.card-image-->
                <div class="card-content">
                    Nenhuma imagem selecionada.
                    <!--div.input-field file-->
                </div>
                <!--div.card-content-->
            </div>
            <!--div.card-->
        </div>
        <!--div.col2 imagem-->
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Pregão</span>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="inicioPregao" type="text" class="validate datepicker">
                            <label for="inicioPregao">Início Pregão</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="terminoPregao" type="text" class="validate datepicker">
                            <label for="terminoPregao">Término Pregão</label>
                        </div>
                    </div>
                </div>
                <!--div.card-content-->
            </div>
            <!--div.card-->
        </div>
        <!--div.col3 infoPregao-->
    </div>
    <!--div.row-->
        
</form>

